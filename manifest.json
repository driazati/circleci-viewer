{
	"manifest_version": 2,

	"name": "CircleCI Log Viewer",
	"short_name": "CircleCI Log Viewer",
	"description": "View CircleCI Logs directly on GitHub",
	"version": "1.0.22",
	"author": "pytorch",

	"icons": { "16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png" },

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"content_scripts": [{
		"matches": [
			"*://github.com/*/pull*"
		],
		"js": ["lib.js", "build_info.js", "build_logs.js", "unminimize_comments.js"],
		"css": ["widescreen.css"],
		"run_at": "document_start"
	}, {
		"matches": [
			"*://github.com/*/pulls*",
			"*://github.com/pulls*"
		],
		"js": ["lib.js", "show_build_status.js"],
		"run_at": "document_end"
	}, {
		"matches": [
			"*://github.com/*"
		],
		"js": ["no-github-spa.js"],
		"run_at": "document_end"
	}],
	"permissions": [
		"activeTab",
		"storage",
		"https://github.com/*",
		"https://circleci.com/*",
		"https://*.amazonaws.com/"
	]
}
